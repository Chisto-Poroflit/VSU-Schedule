@page
@model VSU_Schedule.Areas.Groups.Pages.EditModel

@{
    ViewData["Title"] = "Edit";
}

<h1>Edit</h1>

<h4>Group</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="Group.Id" />
            <div class="form-group">
                <label asp-for="Group.SemesterNumber" class="control-label"></label>
                <input asp-for="Group.SemesterNumber" class="form-control" />
                <span asp-validation-for="Group.SemesterNumber" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Group.GroupNumber" class="control-label"></label>
                <input asp-for="Group.GroupNumber" class="form-control" />
                <span asp-validation-for="Group.GroupNumber" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Group.SubgroupNumber" class="control-label"></label>
                <input asp-for="Group.SubgroupNumber" class="form-control" />
                <span asp-validation-for="Group.SubgroupNumber" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Group.Specialization.Name" class="control-label"></label>
                @Html.DropDownListFor(model => model.Group.SpecializatioId,
                                     new SelectList(Model.Specializations,"Id","Name"),
                                     new {@class = "form-control" })
                <span asp-validation-for="Group.Specialization.Name" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-page="./Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
