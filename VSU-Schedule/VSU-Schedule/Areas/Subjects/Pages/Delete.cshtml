@page
@model VSU_Schedule.Areas.Subjects.Pages.DeleteModel

@{
    ViewData["Title"] = "Удалить предмет";
}

<h3>Вы уверены в том, что хотите удалить предмет @Model.Subject.Name?</h3>
<div>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Subject.Name)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Subject.Name)
        </dd>
    </dl>

    <form method="post">
        <input type="hidden" asp-for="Subject.Id" />
        <input type="submit" value="Удалить" class="btn btn-danger" />
    </form>
    <br />
    <div>
        <a asp-page="./Index">Назад к списку</a>
    </div>
</div>