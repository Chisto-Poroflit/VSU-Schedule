@page
@model VSU_Schedule.Areas.Specializations.Pages.EditModel

@{
    ViewData["Title"] = "Edit";
}

<h1>Edit</h1>

<h4>Specialization</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="Specialization.Id" />
            <div class="form-group">
                <label asp-for="Specialization.Name" class="control-label"></label>
                <input asp-for="Specialization.Name" class="form-control" />
                <span asp-validation-for="Specialization.Name" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Specialization.ParentSpec.Name" class="control-label"></label>
                @Html.DropDownListFor(model => model.Specialization.ParentSpec,
                                     new SelectList(Model.Specializations, "Id", "Name").ToList().Insert(0,new SelectListItem() { Value = null, Text = "-"}),
                                     new { @class = "form-control" })
                <span asp-validation-for="Specialization.ParentSpec.Name" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-page="./Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
