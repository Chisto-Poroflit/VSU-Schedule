@model VSU_Schedule.Areas.CurriculumUnits.Pages._IndexModalPartialModel

<div class="modal fade" id="Modal-@Model.Unit.Id" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel" aria-hidden="true">
    <div class="modal-dialog" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="exampleModalLabel">Предметы</h5>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <div class="modal-body">
                <div class="form-group">
                    <div class="row">
                        <div class="col-4">
                            <label for="message-text" class="col-form-label">
                                <h3>Предмет</h3>
                            </label>
                        </div>
                        <div class="col-4">
                            <label for="message-text" class="col-form-label">
                                <h3>Количество часов</h3>
                            </label>
                        </div>
                    </div>
                </div>
                <div>
                    @foreach (var curSubj in Model.Unit.CurriculumSubjects)
                    {
                        <div class="form-group">
                            <div class="row">
                                <div class="col-4">
                                    @Html.DisplayFor(m => curSubj.Subject.Name)
                                </div>
                                <div class="col-4 offset-1">
                                    @Html.DisplayFor(m => curSubj.QuantityAll)
                                </div>
                            </div>
                        </div>
                    }
                </div>
            </div>
        </div>

    </div>
</div>