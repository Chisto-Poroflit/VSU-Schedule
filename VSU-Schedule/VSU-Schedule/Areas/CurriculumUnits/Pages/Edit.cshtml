@page
@model VSU_Schedule.Areas.CurriculumUnits.Pages.EditModel

@{
    ViewData["Title"] = "Редактирование учебного плана";
}

<h1>Редактировать</h1>

<h4>Учебный план</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="CurriculumUnit.Id" />
            <div class="form-group">
                <label asp-for="CurriculumUnit.QuantityLect" class="control-label"></label>
                <input asp-for="CurriculumUnit.QuantityLect" class="form-control" />
                <span asp-validation-for="CurriculumUnit.QuantityLect" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="CurriculumUnit.QuantityPrac" class="control-label"></label>
                <input asp-for="CurriculumUnit.QuantityPrac" class="form-control" />
                <span asp-validation-for="CurriculumUnit.QuantityPrac" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="CurriculumUnit.QuantityLab" class="control-label"></label>
                <input asp-for="CurriculumUnit.QuantityLab" class="form-control" />
                <span asp-validation-for="CurriculumUnit.QuantityLab" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="CurriculumUnit.SpecializationId" class="control-label"></label>
                <select asp-for="CurriculumUnit.SpecializationId" class="form-control" asp-items="ViewBag.SpecializationId"></select>
                <span asp-validation-for="CurriculumUnit.SpecializationId" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Сохранить" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-page="./Index">Назад к списку</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
